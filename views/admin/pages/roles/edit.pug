extends ../../layouts/default.pug
include ../../mixins/alert.pug 

block main 
    h1(class="mb-4") Chinh sua nhom quyen

    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tieu de 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=data.title
            )
        div(class="form-group")
            label(for="desc") Mo ta
            textarea(
                type="text"
                class="form-control textarea-mce"
                id="desc"
                name="description"
                value =data.description
            )   
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tao moi